{
  "name": "staffwars",
  "version": "1.0.0",
  "engines": {
    "node": "6.0.0"
  },
  "description": "MA2016",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all clean copy build:vue",
    "dev": "npm-run-all build --parallel watchify serve",
    "clean": "rm -rf docs && mkdir -p docs/css docs/js docs/img docs/sample",
    "copy": "ls -R docs && cp src/index.html docs/index.html && cp -r src/img/*.png docs/img/ && cp -r src/sample/*.json docs/sample/",
    "build:vue": "cross-env NODE_ENV=production browserify -g envify -p [ vueify/plugins/extract-css -o docs/css/style.css ] -e src/js/index.js | uglifyjs -c warnings=false -m > docs/js/bundle.js",
    "watchify": "watchify -vd -p browserify-hmr -e src/js/index.js -o docs/js/bundle.js",
    "serve": "http-server docs/ -o -c 1 -a localhost",
    "pretest": "npm run build",
    "test": "echo no test",
    "start": "node index.js",
    "lint": "eslint src/js/**/*.{js,vue}; exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/staffwars/staffwars.git"
  },
  "keywords": [
    "MA2016"
  ],
  "author": "STAFF WARS",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/staffwars/staffwars/issues"
  },
  "homepage": "https://github.com/staffwars/staffwars#readme",
  "browserify": {
    "transform": [
      "babelify",
      "vueify"
    ]
  },
  "browser": {
    "vue": "vue/dist/vue"
  },
  "dependencies": {
    "vue": "^2.0.1",
    "gulp": "^3.9.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "babel": "^6.5.2",
    "babel-core": "^6.17.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-2": "^6.0.0",
    "babel-runtime": "^6.0.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "browserify-hmr": "^0.3.1",
    "cross-env": "^2.0.0",
    "envify": "^3.4.1",
    "eslint": "^3.8.1",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-html": "^1.5.2",
    "eslint-plugin-promise": "^2.0.1",
    "gulp.spritesmith": "^6.2.1",
    "http-server": "^0.9.0",
    "jasmine-core": "^2.4.1",
    "node-sass": "^3.11.1",
    "npm-run-all": "^2.3.0",
    "phantomjs-prebuilt": "^2.1.3",
    "proxyquireify": "^3.0.1",
    "uglify-js": "^2.5.0",
    "vinyl-source-stream": "^1.1.0",
    "vue-resource": "^1.0.3",
    "vueify": "^9.0.0",
    "watchify": "^3.4.0"
  }
}
